---
import Layout from '../layouts/Layout.astro'
import Profile from '../components/Profile.astro'
import getWhatsNew from '../utils/getWhatsNew'
import ArticleList from '../components/ArticleList.astro'

import { ChevronRightIcon } from '@heroicons/react/24/outline'
import ArchivesHeading from '../components/ArchivesHeading.astro'

const articlesList = await getWhatsNew({limit: 6});
---

<Layout>
	<Profile />
	<section class="mx-auto m-2 p-4 border rounded-lg shadow-lg">
		<ArchivesHeading />
		<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
			<ArticleList articles={articlesList} />
		</ul>
		<div class="flex justify-end">
			<a href="/pgn-archives/" class="flex flex-row items-center gap-2 rounded-lg shadow-lg p-4 hover:bg-indigo-200">
				<div>さらに表示</div>
				<ChevronRightIcon className="w-6 h-6" client:visible />				
			</a>
		</div>
	</section>
</Layout>
