---
import Layout from '../layouts/Layout.astro'
import Profile from '../components/Profile.astro'
import KeyVisual from '../assets/keyvisual.jpg'
import FediverseAccountList from '../components/FediverseAccountList'
import LinkWithArrow from '../components/LinkWithArrow.astro'
---

<Layout>
	<main class="border shadow-lg rounded-lg flex flex-col md:flex-row w-fit mx-auto">
		<div class="relative md:w-96">
			<img src={KeyVisual} alt="" class="rounded-lg md:rounded-r-none md:max-h-96" />
			<h1 class="absolute top-1 left-1 text-2xl orbitron text-white text-shadow">Kuropen.org</h1>
			<div class="absolute bottom-1 right-1 text-white text-sm">
				Key visual generated by <a href="https://www.bing.com/" target="_blank" class="hover:underline">Bing AI</a>
			</div>
		</div>
		<div class="p-4">
			<section>
				<Profile />
			</section>
			<section>
				<FediverseAccountList showDetails={false} client:visible />
				<LinkWithArrow href="/fediverse/">その他のFediverseアカウント</LinkWithArrow>
				<LinkWithArrow href="/pgn-archives/">書いたもの一覧</LinkWithArrow>
			</section>
		</div>
	</main>
</Layout>
<style>
	.text-shadow {
    	text-shadow: 1px 1px 2px black, 0 0 1em blue, 0 0 0.2em blue;
	}
</style>